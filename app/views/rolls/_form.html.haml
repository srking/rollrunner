= form_for @roll do |f|
  - if @roll.errors.any?
    #error_explanation
      %h2= "#{pluralize(@roll.errors.count, "error")} prohibited this roll from being saved:"
      %ul
        - @roll.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :order
    = f.text_field :order
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
