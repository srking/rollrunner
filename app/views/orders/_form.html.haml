= form_for(@order) do |f|
  %fieldset
    - if @order.errors.any?
      #error_explanation
        %h2
          = pluralize(@order.errors.count, "error")
          prohibited this order from being saved:
        %ul
          - @order.errors.full_messages.each do |message|
            %li= message
    .form-group
      = f.text_field :name, :class => "form-control input-lg floating-label", :placeholder => "Order Name"
      %br
      %button.btn.btn-primary.btn-block.btn-lg{:type => "submit"}
        Create Order
